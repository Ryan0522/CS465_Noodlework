<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:baselineAligned="false"
    android:id="@+id/bottomNav"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:background="@color/white"
    android:elevation="8dp"
    android:padding="4dp"
    android:layout_gravity="bottom">

    <LinearLayout
        android:id="@+id/navHomeContainer"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingVertical="8dp"
        android:minHeight="56dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackgroundBorderless">

        <ImageView
            android:id="@+id/navHome"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_home"
            android:contentDescription="Home"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/navHomeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:textColor="@color/black"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/navScheduleContainer"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingVertical="8dp"
        android:minHeight="56dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackgroundBorderless">

        <ImageView
            android:id="@+id/navSchedule"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_calendar"
            android:contentDescription="Schedule"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/navScheduleLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Schedule"
            android:textColor="@color/black"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/navRemindersContainer"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingVertical="8dp"
        android:minHeight="56dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackgroundBorderless">

        <ImageView
            android:id="@+id/navReminders"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_reminder"
            android:contentDescription="Reminders"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/navRemindersLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tint="@null"
            android:text="Reminders"
            android:textColor="@color/black"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/navSettingsContainer"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingVertical="8dp"
        android:minHeight="56dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackgroundBorderless">

        <ImageView
            android:id="@+id/navSettings"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_setting"
            android:contentDescription="Settings"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/navSettingsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textColor="@color/black"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>
