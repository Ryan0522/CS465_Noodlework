<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="20dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <!-- Title -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add / Edit Reminder"
            style="@style/Text.Headline"
            android:layout_marginBottom="12dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginBottom="16dp" />

        <!-- Info section -->
        <TextView
            android:text="Roommate:"
            style="@style/Text.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/roommateText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alice"
            style="@style/Text.Body"
            android:layout_marginBottom="8dp" />

        <TextView
            android:text="Chore:"
            style="@style/Text.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/choreText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trash"
            style="@style/Text.Body"
            android:layout_marginBottom="8dp" />

        <TextView
            android:text="Due Day(s):"
            style="@style/Text.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/dueText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sat"
            style="@style/Text.Body"
            android:layout_marginBottom="12dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDDDDD"
            android:layout_marginVertical="12dp" />

        <!-- Quick Setup -->
        <TextView
            android:text="Quick Reminder Setup"
            style="@style/Text.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btnToday"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:text="Today 9pm"
                android:layout_marginEnd="8dp" />
            <Button
                android:id="@+id/btnTomorrow"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:text="Tomorrow 9pm" />
        </LinearLayout>

        <!-- Custom Time Picker -->
        <TextView
            android:text="or choose a custom time"
            style="style/Text.Caption"
            android:textStyle="italic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">

            <Button
                android:id="@+id/btnSun"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="45dp"
                android:text="Sun"
                android:textSize="14sp"
                android:paddingStart="0dp"
                android:paddingEnd="0dp" />
            <Button
                android:id="@+id/btnMon"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="45dp"
                android:text="Mon"
                android:textSize="14sp"
                android:layout_marginEnd="2dp"
                android:paddingStart="0dp"
                android:paddingEnd="0dp" />
            <Button
                android:id="@+id/btnTue"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="45dp"
                android:text="Tue"
                android:textSize="14sp"
                android:layout_marginEnd="2dp"
                android:paddingStart="0dp"
                android:paddingEnd="0dp" />
            <Button
                android:id="@+id/btnWed"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="45dp"
                android:text="Wed"
                android:textSize="14sp"
                android:layout_marginEnd="2dp"
                android:paddingStart="0dp"
                android:paddingEnd="0dp" />
            <Button
                android:id="@+id/btnThu"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="45dp"
                android:text="Thu"
                android:textSize="14sp"
                android:layout_marginEnd="2dp"
                android:paddingStart="0dp"
                android:paddingEnd="0dp" />
            <Button
                android:id="@+id/btnFri"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="45dp"
                android:text="Fri"
                android:textSize="14sp"
                android:layout_marginEnd="2dp"
                android:paddingStart="0dp"
                android:paddingEnd="0dp" />
            <Button
                android:id="@+id/btnSat"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="45dp"
                android:text="Sat"
                android:textSize="14sp"
                android:layout_marginEnd="2dp"
                android:paddingStart="0dp"
                android:paddingEnd="0dp" />
        </LinearLayout>

        <TimePicker
            android:id="@+id/timePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:timePickerMode="spinner"
            android:layout_marginBottom="16dp" />

        <!-- Comments -->
        <EditText
            android:id="@+id/commentInput"
            android:hint="Comments (optional)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/edit_text"
            android:padding="8dp"
            android:layout_marginBottom="16dp" />

        <!-- Buttons -->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/cancelButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:text="Cancel"
                android:textSize="18dp"
                android:backgroundTint="@android:color/darker_gray"
                android:textColor="@android:color/white"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/saveButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:text="Save"
                android:textSize="18dp"
                android:backgroundTint="@android:color/holo_blue_dark"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <include
            android:id="@+id/undoBar"
            layout="@layout/include_undo_bar"
            android:visibility="gone" />

    </LinearLayout>
</ScrollView>
