<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="24dp">

    <!-- Header -->
    <TextView
        android:id="@+id/pageTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chores Swap"
        style="@style/Text.Headline"
        android:textSize="28dp"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_marginBottom="8dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#DDDDDD"
        android:layout_marginBottom="24dp" />

    <!-- Warning Message -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="⚠️ IMPORTANT!! You should confirm swapping in-person before updating anything in the app!!"
        android:textSize="16sp"
        android:textColor="@android:color/holo_red_dark"
        android:textStyle="bold"
        android:textAlignment="center"
        android:gravity="center"
        android:padding="16dp"
        android:background="#FFEBEE"
        android:layout_marginBottom="16dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DDDDDD"
        android:layout_marginBottom="24dp" />

    <!-- First Chore Selection -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select the chore to swap:"
        style="@style/Text.Title"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp" />

    <Spinner
        android:id="@+id/chore1Spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_dropdown"
        android:layout_marginBottom="32dp" />

    <!-- Second Chore Selection -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select the chore to swap with:"
        android:textSize="18sp"
        style="@style/Text.Title"
        android:textStyle="bold"
        android:layout_marginBottom="12dp" />

    <Spinner
        android:id="@+id/chore2Spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_dropdown"
        android:padding="12dp"
        android:layout_marginBottom="32dp" />


    <!-- Swap Button -->
    <Button
        android:id="@+id/swapButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Swap"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/primary"
        android:layout_marginBottom="12dp" />

    <!-- Cancel Button -->
    <Button
        android:id="@+id/cancelButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:textSize="18sp"
        android:textColor="@color/text_primary"
        android:backgroundTint="@color/gray"
        android:layout_marginBottom="8dp" />

    <include
        android:id="@+id/undoBar"
        layout="@layout/include_undo_bar"
        android:visibility="gone" />

</LinearLayout>
